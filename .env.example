# إعدادات قاعدة البيانات
DB_HOST=localhost
DB_NAME=alabasi_unified
DB_USER=your_username
DB_PASS=your_password
DB_CHARSET=utf8mb4

# إعدادات التطبيق
APP_NAME="نظام الأباسي المحاسبي"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# إعدادات الأمان
SESSION_LIFETIME=120
CSRF_TOKEN_LENGTH=32

# إعدادات البريد الإلكتروني (اختياري)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@alabasi.com
MAIL_FROM_NAME="نظام الأباسي"

# إعدادات النسخ الاحتياطي
BACKUP_PATH=./backups
BACKUP_AUTO_DELETE_DAYS=30

# إعدادات الرفع
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx
